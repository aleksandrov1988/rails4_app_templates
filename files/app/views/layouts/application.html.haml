!!!
%html
  %head
    %title=t('app.name')
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: "width=device-width, initial-scale=1.0"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{rel: 'icon', href: image_url('favicon.ico')}
    %link{rel: 'icon', sizes: '32x32' ,href: image_url('favicon-32x32.png')}
    %link{rel: 'apple-touch-icon', href: image_url('apple-icon.png')}


  %body
    #wrapper
      =render 'application/sidebar'
      =render 'application/navbar_top'
      #page-content-wrapper
        .container-fluid
          =render 'flash_messages'
          -if content_for? :breadcrumb
            =yield :breadcrumb
          -if content_for? :error_messages
            =yield :error_messages
          = yield
